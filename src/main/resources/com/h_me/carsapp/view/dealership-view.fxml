<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.DealershipController"
            prefHeight="600.0" prefWidth="900.0">

    <top>
        <VBox>
            <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                <Button text="â† Back to Cars" onAction="#goBack" style="-fx-background-color: #95a5a6;"/>
                <Label text="Dealership Locator" textFill="WHITE" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
                <Label text="My Lat:"/>
                <TextField fx:id="latField" promptText="e.g. 33.5731" prefWidth="100"/>
                <Label text="My Lon:"/>
                <TextField fx:id="lonField" promptText="e.g. -7.5898" prefWidth="100"/>
                <Button text="Find Nearest (50km)" onAction="#handleSearchNearby"/>
                <Button text="Show All" onAction="#loadAllData"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="dealerTable">
            <columns>
                <TableColumn fx:id="colName" text="Dealership Name" prefWidth="200"/>
                <TableColumn fx:id="colCity" text="City" prefWidth="150"/>
                <TableColumn fx:id="colLat" text="Latitude" prefWidth="100"/>
                <TableColumn fx:id="colLon" text="Longitude" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>