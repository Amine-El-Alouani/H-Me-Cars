<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.DealershipController"
            stylesheets="@../styles.css"
            style="-fx-background-color: #0f172a;"
            prefHeight="700.0" prefWidth="1100.0">

    <!-- Header -->
    <top>
        <VBox>
            <HBox styleClass="header-bar" alignment="CENTER_LEFT">
                <Button text="â† Back to Cars" onAction="#goBack" styleClass="button"/>
                <Label text="ðŸ“" style="-fx-font-size: 22px; -fx-padding: 0 0 0 16;"/>
                <Label text="Dealership Locator" styleClass="header-title"/>
            </HBox>

            <!-- Search Bar -->
            <HBox styleClass="search-container" alignment="CENTER_LEFT">
                <TextField fx:id="cityField" promptText="Search by City" prefWidth="180" styleClass="text-field"/>
                <TextField fx:id="nameField" promptText="Search by Name" prefWidth="180" styleClass="text-field"/>
                <Button text="ðŸ” Search" onAction="#handleSearch" styleClass="button-primary"/>
                <Button text="Show All" onAction="#loadAllData" styleClass="button"/>
            </HBox>
        </VBox>
    </top>

    <!-- Split View: Table + Map -->
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-padding: 16;">
            <!-- Dealership Table -->
            <VBox>
                <TableView fx:id="dealerTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colName" text="Dealership Name" prefWidth="180"/>
                        <TableColumn fx:id="colCity" text="City" prefWidth="120"/>
                        <TableColumn fx:id="colLat" text="Latitude" prefWidth="90"/>
                        <TableColumn fx:id="colLon" text="Longitude" prefWidth="90"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Map View -->
            <StackPane style="-fx-background-color: #1e293b; -fx-background-radius: 12;">
                <WebView fx:id="mapWebView"/>
            </StackPane>
        </SplitPane>
    </center>

</BorderPane>