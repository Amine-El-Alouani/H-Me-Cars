<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.DealershipController"
            prefHeight="600.0" prefWidth="1000.0">

    <top>
        <VBox>
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                <Button text="â† Back to Cars" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                <Label text="Dealership Locator" textFill="WHITE" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
                <TextField fx:id="cityField" promptText="Search by City" prefWidth="150"/>
                <TextField fx:id="nameField" promptText="Search by Name" prefWidth="150"/>

                <Button text="Search" onAction="#handleSearch"/>
                <Button text="Show All" onAction="#loadAllData"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4">
            <TableView fx:id="dealerTable">
                <columns>
                    <TableColumn fx:id="colName" text="Dealership Name" prefWidth="150"/>
                    <TableColumn fx:id="colCity" text="City" prefWidth="100"/>
                    <TableColumn fx:id="colLat" text="Lat" prefWidth="80"/>
                    <TableColumn fx:id="colLon" text="Lon" prefWidth="80"/>
                </columns>
            </TableView>

            <StackPane>
                <WebView fx:id="mapWebView" minWidth="100" minHeight="100"/>
            </StackPane>
        </SplitPane>
    </center>

</BorderPane>