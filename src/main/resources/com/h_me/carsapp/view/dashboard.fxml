<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.DashboardController"
            prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="H-Me Cars" textFill="WHITE" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" /> <TextField fx:id="searchField" promptText="Search model..." prefWidth="200"/>
            <Button text="Search" onAction="#handleSearch"/>
            <Button text="Refresh" onAction="#loadData"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="vehicleTable">
            <columns>
                <TableColumn fx:id="colName" text="Model" prefWidth="150"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                <TableColumn fx:id="colPrice" text="Daily Price (MAD)" prefWidth="120"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
            <Label text="Start Date:"/>
            <DatePicker fx:id="startDatePicker" prefWidth="120"/>

            <Label text="End Date:"/>
            <DatePicker fx:id="endDatePicker" prefWidth="120"/>

            <Button text="Rent Selected Car" onAction="#handleRent"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Locate Dealerships" onAction="#goToDealerships"/>
        </HBox>
    </bottom>

</BorderPane>