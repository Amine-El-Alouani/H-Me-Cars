<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.DashboardController"
            stylesheets="@../styles.css"
            style="-fx-background-color: #0f172a;"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- Header -->
    <top>
        <HBox styleClass="header-bar" alignment="CENTER_LEFT">
            <Label text="ðŸš—" style="-fx-font-size: 24px;"/>
            <Label text="H-Me Cars" styleClass="header-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox spacing="12" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search cars..." prefWidth="220" styleClass="text-field"/>
                <Button text="Search" onAction="#handleSearch" styleClass="button"/>
                <Button text="â†» Refresh" onAction="#loadData" styleClass="button"/>
            </HBox>
            
            <Region prefWidth="20"/>
            
            <Button text="Logout" onAction="#handleLogout" styleClass="button-danger"/>
        </HBox>
    </top>

    <!-- Main Content - Vehicle Table -->
    <center>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="vehicleTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colName" text="Model" prefWidth="200"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="140"/>
                    <TableColumn fx:id="colPrice" text="Daily Price (MAD)" prefWidth="150"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Footer - Booking Actions -->
    <bottom>
        <HBox styleClass="footer-bar" alignment="CENTER_RIGHT">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Start Date"/>
                <DatePicker fx:id="startDatePicker" prefWidth="140"/>
            </HBox>
            
            <HBox spacing="12" alignment="CENTER_LEFT">
                <padding><Insets left="20"/></padding>
                <Label text="End Date"/>
                <DatePicker fx:id="endDatePicker" prefWidth="140"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox spacing="12">
                <Button text="ðŸ“ Locate Dealerships" onAction="#goToDealerships" styleClass="button"/>
                <Button text="ðŸ”‘ Rent Selected Car" onAction="#handleRent" styleClass="button-success" prefHeight="44"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>