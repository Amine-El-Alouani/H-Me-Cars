<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.h_me.carsapp.controller.RegisterController"
           styleClass="auth-container"
           stylesheets="@../styles.css">

    <!-- Background Gradient Orbs -->
    <StackPane pickOnBounds="false">
        <!-- Primary Orb - Top Right -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-primary" 
                prefWidth="550" prefHeight="550"
                StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets top="-200" right="-150"/>
            </StackPane.margin>
        </Region>
        
        <!-- Secondary Orb - Bottom Left -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-secondary" 
                prefWidth="450" prefHeight="450"
                StackPane.alignment="BOTTOM_LEFT">
            <StackPane.margin>
                <Insets bottom="-150" left="-100"/>
            </StackPane.margin>
        </Region>
        
        <!-- Accent Orb - Center -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-accent" 
                prefWidth="400" prefHeight="400"
                StackPane.alignment="CENTER">
            <StackPane.margin>
                <Insets top="200" left="300"/>
            </StackPane.margin>
        </Region>
    </StackPane>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="0">
        <VBox styleClass="glass-card" spacing="28" alignment="CENTER" maxWidth="480">
            
            <!-- Brand Header -->
            <VBox spacing="12" alignment="CENTER">
                <HBox alignment="CENTER" spacing="12">
                    <Label text="✨" style="-fx-font-size: 48px;"/>
                </HBox>
                <Label text="Create Account" styleClass="brand-text"/>
                <Label text="Join H-Me Cars and start your journey" styleClass="subtitle"/>
            </VBox>
            
            <!-- Divider -->
            <Region styleClass="divider" prefWidth="350"/>
            
            <!-- Form Fields -->
            <VBox spacing="16" maxWidth="400" minWidth="400">
                
                <!-- Name Row -->
                <HBox spacing="16">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="First Name" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                        <TextField fx:id="firstNameField" 
                                   promptText="John"
                                   styleClass="text-field"/>
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                        <TextField fx:id="lastNameField" 
                                   promptText="Doe"
                                   styleClass="text-field"/>
                    </VBox>
                </HBox>
                
                <!-- Phone Field -->
                <VBox spacing="8">
                    <Label text="Phone Number" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <TextField fx:id="phoneField" 
                               promptText="+212 6XX XXX XXX"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <TextField fx:id="emailField" 
                               promptText="john.doe@example.com"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Create Password" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Create a strong password"
                                   styleClass="password-field"/>
                </VBox>
                
            </VBox>

            <!-- Create Account Button -->
            <Button text="Create Account" 
                    onAction="#handleRegister" 
                    styleClass="button-success" 
                    prefWidth="400" 
                    prefHeight="52">
                <VBox.margin>
                    <Insets top="8"/>
                </VBox.margin>
            </Button>

            <!-- Divider with Text -->
            <HBox alignment="CENTER" spacing="16">
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
                <Label text="or" styleClass="label-muted"/>
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Back to Login -->
            <Button text="← Back to Sign In" 
                    onAction="#goToLogin" 
                    styleClass="button-ghost"/>

        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="4">
            <VBox.margin>
                <Insets top="24"/>
            </VBox.margin>
            <Label text="© 2026 H-Me Cars. All rights reserved." styleClass="label-muted"/>
        </VBox>
    </VBox>

</StackPane>