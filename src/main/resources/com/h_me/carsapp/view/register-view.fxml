<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.h_me.carsapp.controller.RegisterController"
           styleClass="root-container"
           stylesheets="@../styles.css"
           prefWidth="500.0" prefHeight="700.0">

    <!-- Centered Card -->
    <VBox alignment="CENTER" maxWidth="400">
        <VBox styleClass="card" spacing="20" alignment="CENTER">
            
            <!-- Header -->
            <VBox spacing="8" alignment="CENTER">
                <Label text="✨" style="-fx-font-size: 40px;"/>
                <Label text="Create Account" styleClass="title"/>
                <Label text="Join H-Me Cars today" styleClass="subtitle"/>
            </VBox>

            <!-- Form Fields -->
            <VBox spacing="14" maxWidth="320">
                <HBox spacing="12">
                    <TextField fx:id="firstNameField" promptText="First Name" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="lastNameField" promptText="Last Name" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                </HBox>
                <TextField fx:id="phoneField" promptText="Phone Number" styleClass="text-field"/>
                <TextField fx:id="emailField" promptText="Email Address" styleClass="text-field"/>
                <PasswordField fx:id="passwordField" promptText="Create Password" styleClass="password-field"/>
            </VBox>

            <!-- Register Button -->
            <Button text="Create Account" onAction="#handleRegister" styleClass="button-success" 
                    prefWidth="320" prefHeight="48"/>

            <!-- Back to Login -->
            <Button text="← Back to Sign In" onAction="#goToLogin" styleClass="button-secondary"/>

        </VBox>
    </VBox>

</StackPane>