<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.h_me.carsapp.controller.RegisterController"
           styleClass="auth-container"
           stylesheets="@../styles.css"
           alignment="CENTER">

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="0" StackPane.alignment="CENTER">
        <VBox.margin>
            <Insets top="40"/>
        </VBox.margin>
        <VBox styleClass="glass-card" spacing="20" alignment="CENTER" maxWidth="420">
            
            <!-- Brand Header -->
            <VBox spacing="8" alignment="CENTER">
                <HBox alignment="CENTER" spacing="12">
                    <Label text="✨" style="-fx-font-size: 36px;"/>
                </HBox>
                <Label text="Create Account" styleClass="brand-text" style="-fx-font-size: 26px;"/>
                <Label text="Join H-Me Cars and start your journey" styleClass="subtitle" style="-fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Divider -->
            <Region styleClass="divider" prefWidth="300"/>
            
            <!-- Form Fields -->
            <VBox spacing="12" maxWidth="340" minWidth="340">
                
                <!-- Name Row -->
                <HBox spacing="12">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="First Name" styleClass="label-muted" style="-fx-font-size: 11px; -fx-font-weight: 600;"/>
                        <TextField fx:id="firstNameField" 
                                   promptText="John"
                                   styleClass="text-field"/>
                    </VBox>
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" styleClass="label-muted" style="-fx-font-size: 11px; -fx-font-weight: 600;"/>
                        <TextField fx:id="lastNameField" 
                                   promptText="Doe"
                                   styleClass="text-field"/>
                    </VBox>
                </HBox>
                
                <!-- Phone Field -->
                <VBox spacing="6">
                    <Label text="Phone Number" styleClass="label-muted" style="-fx-font-size: 11px; -fx-font-weight: 600;"/>
                    <TextField fx:id="phoneField" 
                               promptText="+212 6XX XXX XXX"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Email Field -->
                <VBox spacing="6">
                    <Label text="Email Address" styleClass="label-muted" style="-fx-font-size: 11px; -fx-font-weight: 600;"/>
                    <TextField fx:id="emailField" 
                               promptText="john.doe@example.com"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="6">
                    <Label text="Create Password" styleClass="label-muted" style="-fx-font-size: 11px; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Create a strong password"
                                   styleClass="password-field"/>
                </VBox>
                
            </VBox>

            <!-- Create Account Button -->
            <Button fx:id="registerButton"
                    text="Create Account" 
                    onAction="#handleRegister" 
                    styleClass="button-success" 
                    prefWidth="340" 
                    prefHeight="44"/>

            <!-- Divider with Text -->
            <HBox alignment="CENTER" spacing="16">
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
                <Label text="or" styleClass="label-muted"/>
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Back to Login -->
            <Button text="← Back to Sign In" 
                    onAction="#goToLogin" 
                    styleClass="button-ghost"/>

        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="4">
            <VBox.margin>
                <Insets top="16"/>
            </VBox.margin>
            <Label text="© 2026 H-Me Cars" styleClass="label-muted" style="-fx-font-size: 11px;"/>
        </VBox>
    </VBox>

</StackPane>
