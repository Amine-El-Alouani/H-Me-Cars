<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.h_me.carsapp.controller.AdminController"
            stylesheets="@../styles.css"
            style="-fx-background-color: #0f172a;"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- Admin Header -->
    <top>
        <HBox styleClass="header-bar-admin" alignment="CENTER_LEFT">
            <Label text="ðŸ›¡ï¸" style="-fx-font-size: 24px;"/>
            <Label text="ADMIN DASHBOARD" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="button"/>
        </HBox>
    </top>

    <!-- Tab Pane -->
    <center>
        <TabPane styleClass="tab-pane">
            
            <!-- Manage Cars Tab -->
            <Tab text="ðŸš—  Manage Cars" closable="false">
                <VBox spacing="16" style="-fx-padding: 20;">
                    
                    <!-- Cars Table -->
                    <TableView fx:id="carTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colCarId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colModel" text="Model" prefWidth="280"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <!-- Action Bar -->
                    <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: #1e293b; -fx-padding: 16; -fx-background-radius: 12;">
                        <TextField fx:id="modelField" promptText="Car Model" prefWidth="180" styleClass="text-field"/>
                        <TextField fx:id="categoryField" promptText="Category" prefWidth="140" styleClass="text-field"/>
                        <TextField fx:id="priceField" promptText="Price (MAD)" prefWidth="120" styleClass="text-field"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button text="âž• Add Car" onAction="#handleAddCar" styleClass="button-success"/>
                        <Button text="ðŸ”„ Toggle Status" onAction="#handleToggleStatus" styleClass="button-warning"/>
                        <Button text="ðŸ—‘ï¸ Delete" onAction="#handleDeleteCar" styleClass="button-danger"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Reservations Tab -->
            <Tab text="ðŸ“‹  All Reservations" closable="false">
                <VBox spacing="16" style="-fx-padding: 20;">
                    
                    <!-- Header Actions -->
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="â†» Refresh List" onAction="#refreshData" styleClass="button-primary"/>
                    </HBox>

                    <!-- Reservations Table -->
                    <TableView fx:id="resTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colResId" text="Res ID" prefWidth="80"/>
                            <TableColumn fx:id="colUserName" text="Customer Name" prefWidth="200"/>
                            <TableColumn fx:id="colUserPhone" text="Phone" prefWidth="140"/>
                            <TableColumn fx:id="colResCarId" text="Car ID" prefWidth="80"/>
                            <TableColumn fx:id="colCost" text="Total Cost" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>