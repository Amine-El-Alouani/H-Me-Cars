<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.h_me.carsapp.controller.LoginController"
           styleClass="auth-container"
           stylesheets="@../styles.css"
           alignment="CENTER">

    <!-- Main Content - Centered Card -->
    <VBox alignment="CENTER" spacing="0" StackPane.alignment="CENTER">
        <VBox.margin>
            <Insets top="40"/>
        </VBox.margin>
        <VBox styleClass="glass-card" spacing="24" alignment="CENTER" maxWidth="380">
            
            <!-- Brand Header -->
            <VBox spacing="10" alignment="CENTER">
                <HBox alignment="CENTER" spacing="12">
                    <Label text="ðŸš—" style="-fx-font-size: 40px;"/>
                </HBox>
                <Label text="H-Me Cars" styleClass="brand-text" style="-fx-font-size: 28px;"/>
                <Label text="Welcome back! Sign in to your account" styleClass="subtitle" style="-fx-font-size: 13px;"/>
            </VBox>
            
            <!-- Divider -->
            <Region styleClass="divider" prefWidth="260"/>
            
            <!-- Form Fields -->
            <VBox spacing="14" maxWidth="300" minWidth="300">
                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <TextField fx:id="emailField" 
                               promptText="Enter your email"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Enter your password"
                                   styleClass="password-field"/>
                </VBox>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" maxWidth="300"/>

            <!-- Sign In Button -->
            <Button fx:id="loginButton"
                    text="Sign In" 
                    onAction="#handleLogin" 
                    styleClass="button-primary" 
                    prefWidth="300" 
                    prefHeight="46">
            </Button>

            <!-- Divider with Text -->
            <HBox alignment="CENTER" spacing="16">
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
                <Label text="or" styleClass="label-muted"/>
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Register Link -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="Don't have an account?" styleClass="subtitle"/>
                <Hyperlink text="Create your account" 
                           onAction="#goToRegister" 
                           styleClass="hyperlink"/>
            </VBox>

        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="4">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
            <Label text="Â© 2026 H-Me Cars" styleClass="label-muted" style="-fx-font-size: 11px;"/>
        </VBox>
    </VBox>

</StackPane>
