<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.h_me.carsapp.controller.LoginController"
           styleClass="auth-container"
           stylesheets="@../styles.css">

    <!-- Background Gradient Orbs for Visual Interest -->
    <StackPane pickOnBounds="false">
        <!-- Primary Orb - Top Left -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-primary" 
                prefWidth="600" prefHeight="600"
                StackPane.alignment="TOP_LEFT">
            <StackPane.margin>
                <Insets top="-200" left="-150"/>
            </StackPane.margin>
        </Region>
        
        <!-- Secondary Orb - Bottom Right -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-secondary" 
                prefWidth="500" prefHeight="500"
                StackPane.alignment="BOTTOM_RIGHT">
            <StackPane.margin>
                <Insets bottom="-150" right="-100"/>
            </StackPane.margin>
        </Region>
        
        <!-- Accent Orb - Center Right -->
        <Region styleClass="auth-bg-orb, auth-bg-orb-accent" 
                prefWidth="350" prefHeight="350"
                StackPane.alignment="CENTER_RIGHT">
            <StackPane.margin>
                <Insets right="-50"/>
            </StackPane.margin>
        </Region>
    </StackPane>

    <!-- Main Content - Centered Card -->
    <VBox alignment="CENTER" spacing="0">
        <VBox styleClass="glass-card" spacing="32" alignment="CENTER" maxWidth="440">
            
            <!-- Brand Header -->
            <VBox spacing="12" alignment="CENTER">
                <HBox alignment="CENTER" spacing="12">
                    <Label text="ðŸš—" styleClass="brand-logo"/>
                </HBox>
                <Label text="H-Me Cars" styleClass="brand-text"/>
                <Label text="Welcome back! Sign in to your account" styleClass="subtitle"/>
            </VBox>
            
            <!-- Divider -->
            <Region styleClass="divider" prefWidth="300"/>
            
            <!-- Form Fields -->
            <VBox spacing="18" maxWidth="360" minWidth="360">
                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <TextField fx:id="emailField" 
                               promptText="Enter your email"
                               styleClass="text-field"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="label-muted" style="-fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Enter your password"
                                   styleClass="password-field"/>
                </VBox>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" maxWidth="360"/>

            <!-- Sign In Button -->
            <Button text="Sign In" 
                    onAction="#handleLogin" 
                    styleClass="button-primary" 
                    prefWidth="360" 
                    prefHeight="52">
                <VBox.margin>
                    <Insets top="8"/>
                </VBox.margin>
            </Button>

            <!-- Divider with Text -->
            <HBox alignment="CENTER" spacing="16">
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
                <Label text="or" styleClass="label-muted"/>
                <Region styleClass="divider" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Register Link -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="Don't have an account?" styleClass="subtitle"/>
                <Hyperlink text="Create your account" 
                           onAction="#goToRegister" 
                           styleClass="hyperlink"/>
            </VBox>

        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="4">
            <VBox.margin>
                <Insets top="32"/>
            </VBox.margin>
            <Label text="Â© 2026 H-Me Cars. All rights reserved." styleClass="label-muted"/>
        </VBox>
    </VBox>

</StackPane>